<%- layout("/layouts/boilerplate.ejs") %>
<%- include("../includes/flash.ejs") %>

<div class="signup-page">
    <div class="signup-box" >
        <a class="navbar-brand " href="/"><h3 class="Logo" >magic menu</h3></a>
        <div class="col-10 offset-1 signup-card">
            <h3 style="text-align: center;">Sign up</h3>
            <p style="text-align: center;">Create an account</p>

            <form action="/signup" class="needs-validation" method="post" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label> <i class="fa-solid fa-user"></i>
                    <input name="name" id="name" type="text" class="form-control" maxlength="17" placeholder="Please Enter Accout Holder Name" required>
                </div>

                <div class="mb-3">
                    <label for="hotelname" class="form-label">Hotel Name</label> <i class="fa-solid fa-user"></i>
                    <input name="hotelname" id="hotelname" type="text" class="form-control" maxlength="17" placeholder="Please Enter Hotel Name" required>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Address</label> <i class="fa-solid fa-location-dot"></i>
                    <input name="location" id="location" type="text" class="form-control" maxlength="50" placeholder="Please Enter Hotel Address" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label> <i class="fa-solid fa-envelope"></i>
                    <input name="email" id="email" type="email" class="form-control" placeholder="Please Enter Email" required>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Mobile Number</label> <i class="fa-solid fa-phone"></i>
                    <input name="username" id="username" type="number" class="form-control" maxlength="10" placeholder="Please Enter Mobile Number" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label> <i class="fa-solid fa-lock"></i>
                    <input name="password" id="password" type="password" class="form-control" placeholder="Create a Strong Password" required>
                </div>

                <div class="mb-3">
                    <label for="masterkey" class="form-label">Master Key</label> <i class="fa-solid fa-lock"></i>
                    <input name="masterkey" id="masterkey" type="password" class="form-control" placeholder="Enter Master Key" required>
                </div>
                <button class="btn btn-light signup-btn mt-3" >SignUp</button>
            </form>
            <p style="text-align: center;" class="mt-3">Already have an account?</p>
            <a class="btn btn-light signup-btn " href="/login">LogIn</a>
        </div>
    </div>

    <footer class="signup-footer" >
        <div class="f-info" style="background-color: transparent;">
            <div class="f-info-socials signup-login-socials" style="font-size: 20px;display: inline-flex;">
                <a href="https://Instagram.com/magic_menu.in"><i _ngcontent-kso-c106="" aria-hidden="true" class="fa fa-instagram"></i></a>
                <a href="https://x.com/magicmenuin?t=Nf6pl5nPRoTAEtqgtU5eQA&s=08"><i _ngcontent-kso-c106="" aria-hidden="true" class="fa fa-twitter-square"></i></a>
                <a href="https://www.linkedin.com/company/magic-menu-in/"><i _ngcontent-kso-c106="" aria-hidden="true" class="fa fa-linkedin-square"></i></a>
            </div>
            <div class="f-info-brand signup-login-brand" style="word-spacing: 2px;">&copy; Inspire Private Limited</div>
            <div class="f-info-links signup-login-links">
                <a href="/privacy">Privacy</a>
                <a href="/terms">Terms</a>
            </div>
        </div>
    </footer>
</div>
