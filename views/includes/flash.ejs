<head>
  <link rel="stylesheet" href="/css/flash.css">
</head>

<% if( flashSuccess && flashSuccess.length) { %>
    <div class="alert col-8 offset-2 alert-success alert-dismissible fade show flash flashSuccess " id="fade"  role="alert">
    <p><i class="fa-regular fa-circle-check"></i> &nbsp;&nbsp;&nbsp;&nbsp;<%= flashSuccess %></p>
    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" ></button> -->
  </div>
<% } %>

<% if(flashError && flashError.length) { %>
  <div class="alert col-8 offset-2 alert-danger alert-dismissible fade show flash flashError" id="fade" role="alert" style="background-color: red;">
    <i class="fa-regular fa-circle-xmark" ></i> &nbsp;&nbsp;&nbsp;&nbsp;<%= flashError %>
    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
  </div>
<% } %>

<% if(error && error.length) { %>
  <div class="alert mt-2 col-8 offset-2 alert-dismissible fade show flash" id="fade"  role="alert">
    <%= error %>
    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
  </div>
<% } %>

<% if(success && success.length) { %>
  <div class="alert mt-2 col-8 offset-2 alert-dismissible fade show flash" id="fade" role="alert">
    <%= success %>
    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
  </div>
<% } %>

<script src="/js/script.js"></script>